<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="5dp" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <com.yellowsoft.newproject.CustomViewPager
            android:id="@+id/home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff" />

        <LinearLayout
            android:id="@+id/ll_bottomnav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/home_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/home_icon"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/home_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="HOME"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:font_name="Gothammedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/track"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/track_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/track"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/track_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="TRACK"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:font_name="Gothammedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/shop_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/shop"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/shop_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="SHOP"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:font_name="Gothammedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scheme"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_scheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/scheme_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scheme"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/scheme_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="SCHEME"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:font_name="Gothammedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/account_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/myaccount_icon"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/account_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="ACCOUNT"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:font_name="Gothammedium" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ll_main"
        android:background="@drawable/shadow" />

</RelativeLayout>

    <LinearLayout
        android:id="@+id/menu_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:divider="@drawable/divider_grey"
        android:dividerPadding="50dp"
        android:orientation="vertical"
        android:showDividers="middle">
        <!--android:layout_gravity="start"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/login_ll_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#e9e9e9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/logo" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_divider_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#dcdcdc"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loginbanner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_login"
                        android:layout_width="83dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rounded_corners"
                        android:orientation="horizontal">

                        <com.yellowsoft.newproject.CustomTextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="LOGIN"
                            android:textColor="@android:color/white"
                            app:font_name="Gothammedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_signup"
                        android:layout_width="83dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_corners"
                        android:orientation="horizontal">

                        <com.yellowsoft.newproject.CustomTextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SIGN UP"
                            android:textColor="@android:color/white"
                            app:font_name="Gothammedium" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_userdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e9e9e9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_usr"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/user_rounded" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/usr_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="MY COP USER"
                                android:textSize="16sp"
                                app:font_name="Gothammedium" />

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/membercode_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="my member code"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                app:font_name="Gothambook" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_userdetails"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:divider="@null" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="#dcdcdc"
            android:orientation="horizontal"
            android:visibility="gone"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="About"
                    android:textSize="16sp"
                    app:font_name="Gothammedium" />

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_returns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/referals"
                    android:textSize="16sp"
                    app:font_name="Gothammedium" />

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_scheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="Scheme Details"
                    android:textSize="16sp"
                    app:font_name="Gothammedium" />

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/terms"
                    android:textSize="16sp"
                    app:font_name="Gothammedium" />

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="FAQ's"
                    android:textSize="16sp"
                    app:font_name="Gothammedium" />

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_contactus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="Contact Us"
                    android:textSize="16sp"
                    app:font_name="Gothammedium" />

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="Logout"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:font_name="Gothammedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.yellowsoft.newproject.CustomTextView
                        android:id="@+id/tv_followus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Follow us @"
                        app:font_name="Gothambook" />

                    <RelativeLayout
                        android:id="@+id/rr_fb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_corners_fb"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:src="@drawable/f" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/fb_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/fb_icon" />

                    <ImageView
                        android:id="@+id/tw_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/tw_icon" />

                    <ImageView
                        android:id="@+id/gm_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/gmail_icon" />

                    <ImageView
                        android:id="@+id/youtube_img_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/youtube" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"></LinearLayout>

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/tv_rights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:text="All Rights Recived by MY COP"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:font_name="Gothammedium" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>