<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/checkout_toolBar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkout_toolBar"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/checkout_toolBar"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.yellowsoft.newproject.CustomTextView
                        android:id="@+id/customTextView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dp"
                        android:gravity="center_horizontal"
                        android:text="Shipping"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_firstname_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="First Name*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_lastname_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Last Name*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_address_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@null"
                                    android:hint="Address*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="7"
                                    android:paddingBottom="50dp"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_email_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Email id*"
                                    android:imeOptions="actionDone"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_phone_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Phone Number*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_city_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="City*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_pincode_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Pin Code*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/tv_state_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="State*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/et_country_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Country*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:text="INDIA"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/proceedtopay_ll_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:orientation="vertical">

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/customTextView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:text="PROCEED TO PAYMENT"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/checkout_toolBar"
            android:background="#a0000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_corners_white"
                android:divider="@drawable/divider_grey"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/customTextView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Select State"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <ListView
                    android:id="@+id/lv_states"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>