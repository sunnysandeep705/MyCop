<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/contactus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/contactus_toolbar"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.yellowsoft.newproject.CustomTextView
                            android:id="@+id/customTextView45"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Give Us Your Details"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_name_contactus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Name*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_email_contactus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Email Id*"
                                    android:imeOptions="actionDone"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_phone_contactus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Phone Number*"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="horizontal">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/topic_select_tv_dropdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:background="@null"
                                    android:hint="Select a Topic"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"></LinearLayout>

                                <ImageView
                                    android:id="@+id/imageView14"
                                    android:layout_width="15dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/downarrow" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corners_transparent"
                                android:orientation="vertical">

                                <com.yellowsoft.newproject.CustomTextEdit
                                    android:id="@+id/et_message_contactus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@null"
                                    android:hint="Enter Your Message"
                                    android:imeOptions="actionDone"
                                    android:maxLines="7"
                                    android:paddingBottom="50dp"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/submit_ll_contact"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_corners"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView47"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="SUBMIT"
                                android:textColor="@color/colorWhite"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView55"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/office_location" />

                            <ImageView
                                android:id="@+id/mycop_location_img"
                                android:layout_width="match_parent"
                                android:layout_height="125dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mycoplocation" />

                            <View
                                android:id="@+id/view5"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:background="@drawable/shadow" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView57"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/contact_details" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ededed"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/mobile_icon"
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            app:srcCompat="@drawable/phone" />

                                        <com.yellowsoft.newproject.CustomTextView
                                            android:id="@+id/mycopmobilenumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="  +91 9848213384"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imageView16"
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/email" />

                                        <com.yellowsoft.newproject.CustomTextView
                                            android:id="@+id/customTextView58"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="  info@mycop.in"
                                            android:textColor="@color/colorBlack" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView17"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/location" />

                                    <com.yellowsoft.newproject.CustomTextView
                                        android:id="@+id/customTextView59"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:text="My Cop Surveillance Solutions, Shop no 311, First floor, M. G Wholesale Commercial Complex, Gollapudi, Vijayawada, Andhra Pradesh 521225, India"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="13sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/tv_followus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="40dp"
                                    android:text="Follow us @"
                                    android:textColor="@color/colorBlack"
                                    app:font_name="Gothambook" />

                                <ImageView
                                    android:id="@+id/fb_btn_contactus"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    app:srcCompat="@drawable/fb_icon" />

                                <ImageView
                                    android:id="@+id/tw_btn_contactus"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/tw_icon" />

                                <ImageView
                                    android:id="@+id/gm_btn_contactus"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/gmail_icon" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <View
            android:id="@+id/shadow2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contactus_toolbar"
            android:background="@drawable/shadow" />

        <LinearLayout
            android:id="@+id/topselect_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/contactus_toolbar"
            android:background="#a0000000"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/topic_ll_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@color/colorWhite"
                android:divider="@drawable/divider_grey"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/customTextView60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Select a topic"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <ListView
                    android:id="@+id/topicselect_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:entries="@array/topicListItems" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>